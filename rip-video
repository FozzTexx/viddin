FLAGS="--loose-anamorphic --markers"
EXT=mkv

while [ $# -gt 0 -a `expr substr "${1:-empty}" 1 2` = "--" ] ; do
    case "$1" in
	--gain) 
	    FLAGS="${FLAGS} $1 $2"
	    shift 2
	    ;;
	--dvd)
	    DVD="$2"
	    shift 2
	    ;;
	--title)
	    TITLE="$2"
	    shift 2
	    ;;
	--chapters)
	    CHAPTERS="$2"
	    shift 2
	    ;;
	--quality)
	    FLAGS="${FLAGS} --quality $2"
	    shift 2
	    ;;
	--crop)
	    FLAGS="${FLAGS} --crop $2"
	    shift 2
	    ;;
	--extension)
	    EXT="$2"
	    shift 2
	    ;;
	--cfr)
	    FR=--cfr
	    shift
	    ;;
	--animation)
	    FLAGS="${FLAGS} -r 23.976 --x264-tune animation --detelecine --decomb"
	    if [ -n "${FR}" ] ; then
		FR=--vfr
	    fi
	    shift
	    ;;
	--pal-animation)
	    FLAGS="${FLAGS} --x264-tune animation --decomb"
	    if [ -n "${FR}" ] ; then
		FR=--vfr
	    fi
	    shift
	    ;;
	# Similar to pal-animation, but bottom field first
	--lap-animation)
	    FLAGS="${FLAGS} --x264-tune animation --deinterlace=mode=1:parity=1"
	    if [ -n "${FR}" ] ; then
		FR=--vfr
	    fi
	    shift
	    ;;
	--mangled-pal)
	    FLAGS="${FLAGS} --x264-tune animation --decomb=bob"
	    if [ -n "${FR}" ] ; then
		FR=--vfr
	    fi
	    shift
	    ;;
	--film)
	    FLAGS="${FLAGS} -r 23.976 --x264-tune film --detelecine --decomb"
	    if [ -n "${FR}" ] ; then
		FR=--vfr
	    fi
	    shift
	    ;;
	--tv)
	    FLAGS="${FLAGS} --decomb"
	    if [ -n "${FR}" ] ; then
		FR=--vfr
	    fi
	    shift
	    ;;
	--decomb)
	    FLAGS="${FLAGS} --decomb"
	    shift
	    ;;
	--detelecine)
	    FLAGS="${FLAGS} --detelecine"
	    shift
	    ;;
	--subtitles)
	    FLAGS="${FLAGS} --subtitle scan --subtitle-forced"
	    shift
	    ;;
	--subtitle)
	    FLAGS="${FLAGS} --subtitle $2"
	    shift 2
	    ;;
	--lang)
	    FLAGS="${FLAGS} --native-language $2 --native-dub"
	    shift 2
	    ;;
	--yprv)
	    FLAGS="${FLAGS} -e x264 -q 27 -x cabac=1:ref=5:analyse=0x133:me=umh:subme=9:chroma-me=1:deadzone-inter=21:deadzone-intra=11:b-adapt=2:rc-lookahead=60:vbv-maxrate=10000:vbv-bufsize=10000:qpmax=69:bframes=5:b-adapt=2:direct=auto:crf-max=51:weightp=2:merange=24:chroma-qp-offset=-1:sync-lookahead=2:psy-rd=1.00,0.15:trellis=2:min-keyint=23:partitions=all"
	    shift
	    ;;
	--ypra)
	    FLAGS="${FLAGS} -E fdk_faac -B 96k -6 stereo -R 44.1"
	    shift
	    ;;
	--x265 | --h265)
	    FLAGS="${FLAGS} -e x265"
	    shift
	    ;;
	--anim265)
	    FLAGS="${FLAGS} -e x265 -x weightb=1:bframes=11:bframe-bias=90:rc-lookahead=60:me=dia:max-merge=5:rect:ctu=64:b-adapt=2:tu-inter-depth=4:tu-intra-depth=4:ipratio=0.8"
	    shift
	    ;;
	--audio)
	    FLAGS="${FLAGS} --aencoder $2"
	    shift 2
	    ;;
	--mixdown|--downmix)
	    FLAGS="${FLAGS} --mixdown $2"
	    shift 2
	    ;;
	--width)
	    FLAGS="${FLAGS} -w $2"
	    shift 2
	    ;;
	--pixel-aspect)
	    FLAGS="${FLAGS} --pixel-aspect $2"
	    shift 2
	    ;;
	--bluray | --blu-ray)
	    FLAGS="${FLAGS} -e x265 --aencoder ac3 --mixdown 5point1"
	    FLAGS="${FLAGS} --subtitle scan --subtitle-forced"
	    shift
	    ;;
	--movie)
	    FLAGS="${FLAGS} -r 23.976 --x264-tune film --detelecine --decomb"
	    FLAGS="${FLAGS} --subtitle scan --subtitle-forced"
	    shift
	    ;;
	--restore-ntsc)
	    RESTORENTSC=1
	    shift
	    ;;
	*)
	    echo unknown flag "$1"
	    exit 1
	    ;;
    esac
done

if [ -n "${TITLE}" ] ; then
    FLAGS="${FLAGS} --title ${TITLE}"
    SOURCE="${DVD:-/dev/dvd}"
    DEST="$1"
else
    SOURCE="$1"
    DEST="$2"
fi

if [ -n "${CHAPTERS}" ] ; then
    FLAGS="${FLAGS} --chapters ${CHAPTERS}"
fi

FLAGS="${FLAGS} ${FR}"

if [ -z "${DEST}" ] ; then
    DEST="${SOURCE%.*}"
    while [ -e "${DEST}${COUNTER}.${EXT}" ] ; do
	if [ -z "${COUNTER}" ] ; then
	    COUNTER=1
	fi
	COUNTER=`expr ${COUNTER} + 1`
    done
    DEST="${DEST}${COUNTER}.${EXT}"
fi

HandBrakeCLI --encoder x264 ${FLAGS} -i "${SOURCE}" -o "${DEST}" 2>/dev/null

if [ -n "${RESTORENTSC}" ] ; then
    restore-ntsc "${DEST}"
    OUTPUT="${DEST%.*}"-NTSC.mkv
    echo "${OUTPUT}"
    mv "${OUTPUT}" "${DEST}"
fi

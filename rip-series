while [ $# -gt 0 -a `expr substr "${1:-empty}" 1 2` = "--" ] ; do
    case "$1" in
	--dvd)
	    DVDFLAG="--dvd"
	    DVD="$2"
	    shift 2
	    ;;
	--season)
	    SEASON="$2"
	    shift 2
	    ;;
	--title)
	    TITLE="$2 --chapters"
	    shift 2
	    ;;
	--chapters)
	    FLAGS="${FLAGS} --chapters $2"
	    shift 2
	    ;;
	--firstep)
	    EPISODE="$2"
	    shift 2
	    ;;
	--animation|--film|--decomb|--pal-animation|--subtitles)
	    FLAGS="${FLAGS} $1"
	    shift
	    ;;
	*)
	    echo "Unknown flag:" "$1"
	    exit 1
	    ;;
    esac
done

if [ -z "${SEASON}" ] ; then
    SEASON=$1
    shift
fi
if [ -z "${EPISODE}" ] ; then
    EPISODE=$1
    shift
fi

TITLES="$@"

# If no titles specified, rip all of them
if [ $# = 0 ] ; then
    TITLES=`(lsdvd "${DVD}" 2>/dev/null) | egrep '^Title:' | awk '{printf "%i\n", $2}' | sed -e 's/,//'`
fi

for i in ${TITLES} ; do
    ep=`echo $EPISODE |awk '{printf "%02i\n", $1}'`
    EPISODE=`expr $EPISODE + 1`
    if [ -n "${DVD}" ] ; then
	rip-video ${DVDFLAG} "${DVD}" ${FLAGS} --title ${TITLE} $i ${SEASON}x${ep}.mkv
    else
	rip-video ${FLAGS} --title ${TITLE} $i ${SEASON}x${ep}.mkv
    fi
done

if [ -z "${DVD}" ] ; then
    eject
fi

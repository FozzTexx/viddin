EXT=mkv

while [ $# -gt 0 -a `expr substr "${1:-empty}" 1 2` = "--" ] ; do
    case "$1" in
	--dvd)
	    DVDFLAG="--dvd"
	    DVD="$2"
	    shift 2
	    ;;
	--season)
	    SEASON="$2"
	    shift 2
	    ;;
	--title)
	    TITLE="$2 --chapters"
	    shift 2
	    ;;
	--chapters)
	    FLAGS="${FLAGS} --chapters $2"
	    shift 2
	    ;;
	--split-chapters)
	    SPLIT=1
	    shift
	    ;;
	--crop)
	    FLAGS="${FLAGS} --crop $2"
	    shift 2
	    ;;
	--extension)
	    FLAGS="${FLAGS} --extension $2"
	    EXT="$2"
	    shift 2
	    ;;
	--cfr)
	    FLAGS="${FLAGS} --cfr"
	    shift
	    ;;
	--firstep)
	    EPISODE="$2"
	    shift 2
	    ;;
	--animation|--film|--decomb|--pal-animation|--subtitles)
	    FLAGS="${FLAGS} $1"
	    shift
	    ;;
	--lang)
	    FLAGS="${FLAGS} $1 $2"
	    shift 2
	    ;;
	*)
	    echo "Unknown flag:" "$1"
	    exit 1
	    ;;
    esac
done

if [ -z "${SEASON}" ] ; then
    SEASON=$1
    shift
fi
if [ -z "${EPISODE}" ] ; then
    EPISODE=$1
    shift
fi

TITLES="$@"

# If no titles specified, rip all of them
if [ $# = 0 ] ; then
    TITLES=`(lsdvd "${DVD}" 2>/dev/null) | egrep '^Title:' | awk '{printf "%i\n", $2}' | sed -e 's/,//'`
fi

if [ -n "${SPLIT}" ] ; then
    for i in ${TITLES} ; do
	CHAPTERS=`lsdvd -t $i -c | grep Chapter: | awk '{printf "'$i':%i\n", $2}'`
	titles="${titles} ${CHAPTERS}"
    done
    TITLES=${titles}
fi

for i in ${TITLES} ; do
    ep=`echo $EPISODE |awk '{printf "%02i\n", $1}'`
    EPISODE=`expr $EPISODE + 1`
    if expr match $i "[0-9][0-9]*:[0-9][0-9]*" > /dev/null ; then
	i=`echo $i | sed -e 's/:/ --chapters /'`
    fi
    if [ -n "${DVD}" ] ; then
	rip-video ${DVDFLAG} "${DVD}" ${FLAGS} --title ${TITLE} $i ${SEASON}x${ep}.${EXT}
    else
	rip-video ${FLAGS} --title ${TITLE} $i ${SEASON}x${ep}.${EXT}
    fi
    tput cuu1
    tput el
    size=`ls -lh ${SEASON}x${ep}.${EXT} | awk '{print $5}'`
    echo ${SEASON}x${ep}.${EXT}: $i $size
done

if [ -z "${DVD}" ] ; then
    eject
fi
